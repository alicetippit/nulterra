[
  {
    "name": "fcrepo",
    "image": "nulib/fcrepo4:s3fix",
    "memory": 3000,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "environment": [
      {
        "name": "MODESHAPE_CONFIG",
        "value": "classpath:/config/jdbc-postgresql/repository.json"
      },
      {
        "name": "JAVA_OPTIONS",
        "value": "-Dfcrepo.postgresql.host=${db_host} -Dfcrepo.postgresql.port=${db_port} -Dfcrepo.postgresql.username=${db_username} -Dfcrepo.postgresql.password=${db_password} -Daws.accessKeyId=${aws_key} -Daws.secretKey=${aws_secret} -Daws.bucket=${aws_bucket}"
      }
    ]
  }
]
