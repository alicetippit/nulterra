[
  {
    "name": "zookeeper",
    "image": "nulib/zookeeper-exhibitor",
    "memory": 3000,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8181,
        "hostPort": 8181
      },
      {
        "containerPort": 2181,
        "hostPort": 2181
      },
      {
        "containerPort": 2888,
        "hostPort": 2888
      },
      {
        "containerPort": 3888,
        "hostPort": 3888
      }
    ],
    "environment": [
      {
        "name": "S3_BUCKET",
        "value": "${config_bucket}"
      },
      {
        "name": "S3_PREFIX",
        "value": "zookeeper"
      },
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "DYNAMIC_HOSTNAME",
        "value": "true"
      }
    ]
  }
]
